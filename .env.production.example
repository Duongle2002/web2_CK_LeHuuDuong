# Copy this file to .env.production and fill in values

# Images to deploy (from GHCR or Docker Hub)
BACKEND_IMAGE=ghcr.io/duongle2002/cafe-backend:latest
FRONTEND_IMAGE=ghcr.io/duongle2002/cafe-frontend:latest

# Database connection
# IMPORTANT: Do NOT commit real credentials. Put the real URI in CI/CD secrets or Jenkins credentials.
# Example format:
# MONGODB_URI=mongodb+srv://<user>:<password>@<cluster-host>/<database>
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster-host>/<database>
MONGO_PORT=27017

# App configuration
# IMPORTANT: Do NOT commit real secrets. Store them in CI/CD secrets or Jenkins credentials.
JWT_SECRET=<your-jwt-secret>
JWT_EXP_MS=86400000

# Published ports on the server
HTTP_PORT=8080
FRONTEND_PORT=80
